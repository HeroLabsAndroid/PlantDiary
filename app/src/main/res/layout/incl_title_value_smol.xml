<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/TV_incl_titvalsmol_tit"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/almendra_display"
        android:text="TextView"
        android:textColor="@color/DRK_TXT"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_incl_titvalsmol_val"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/almendra_display"
        android:text="TextView"
        android:textColor="@color/DRK_TXT"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/TV_incl_titvalsmol_tit"
        app:layout_constraintStart_toEndOf="@+id/TV_incl_titvalsmol_tit"
        app:layout_constraintTop_toTopOf="@+id/TV_incl_titvalsmol_tit" />
</androidx.constraintlayout.widget.ConstraintLayout>