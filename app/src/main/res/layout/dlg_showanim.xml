<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DRK_BG_MAIN">

    <ImageView
        android:id="@+id/IV_showanim_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/DRK_BG_SHADE"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/BTN_showanim_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/DRK_ACC6"
        android:text="go go go"
        app:layout_constraintEnd_toEndOf="@+id/IV_showanim_photo"
        app:layout_constraintStart_toStartOf="@+id/IV_showanim_photo"
        app:layout_constraintTop_toBottomOf="@+id/IV_showanim_photo" />

    <TextView
        android:id="@+id/TV_showanim_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/DRK_TXT"
        app:layout_constraintEnd_toEndOf="@+id/BTN_showanim_start"
        app:layout_constraintStart_toStartOf="@+id/BTN_showanim_start"
        app:layout_constraintTop_toBottomOf="@+id/BTN_showanim_start" />

</androidx.constraintlayout.widget.ConstraintLayout>