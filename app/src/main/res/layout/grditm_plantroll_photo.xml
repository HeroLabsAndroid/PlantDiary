<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LGT_BG_SHADE"
    android:padding="4dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/IV_grditm_plantroll_photo"
        android:layout_width="@dimen/ROLL_PIC_HEIGHT"
        android:layout_height="@dimen/ROLL_PIC_HEIGHT"
        android:background="@color/LGT_BG_SHADE"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/TV_grditm_plantroll_name"
        android:layout_width="@dimen/ROLL_PIC_HEIGHT"
        android:layout_height="wrap_content"
        android:background="@color/LGT_BG_MAIN"
        android:fontFamily="@font/almendra_display"
        android:padding="2dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/LGT_TXT"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/IV_grditm_plantroll_photo"
        app:layout_constraintStart_toStartOf="@+id/IV_grditm_plantroll_photo"
        app:layout_constraintTop_toBottomOf="@+id/IV_grditm_plantroll_photo" />

    <Button
        android:id="@+id/BTN_grditm_plantroll_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="ya yeet"
        app:layout_constraintEnd_toEndOf="@+id/TV_grditm_plantroll_name"
        app:layout_constraintStart_toStartOf="@+id/TV_grditm_plantroll_name"
        app:layout_constraintTop_toBottomOf="@+id/TV_grditm_plantroll_name" />
</androidx.constraintlayout.widget.ConstraintLayout>